html(lang='en')
  head
    title= title
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    div(class="navbar navbar-fixed-top")
        div(class="navbar-inner")
            div(class="container-fluid")
                ul(class="nav")
                    li(class="active")
                        a(href="#") Parnassus
                    li(class="dropdown")
                        a(href="#", class="dropdown-toggle", data-toggle="dropdown") File
                            b(class="caret")
                        ul(class="dropdown-menu")
                            li 
                                a(href="#") git branch
                            li 
                                a(href="#") git clone
                            li(class="divider")
                            li 
                                a(href="#") git commit
                            li 
                                a(href="#") git push
                            li 
                                a(href="#") git pull
                            li(class="divider")
                            li 
                                a(href="#") git add
                            li 
                                a(href="#") git rm
                            li 
                                a(href="#") git mv
                    li(class="dropdown")
                        a(href="#", class="dropdown-toggle", data-toggle="dropdown") Edit
                            b(class="caret")
                        ul(class="dropdown-menu")
                            li 
                                a(href="#") Undo
                            li 
                                a(href="#") Redo
                            li(class="divider")
                            li 
                                a(href="#") Cut
                            li 
                                a(href="#") Copy
                            li 
                                a(href="#") Paste
                    li(class="dropdown")
                        a(href="#", class="dropdown-toggle", data-toggle="dropdown") Manage
                            b(class="caret")
                        ul(class="dropdown-menu")
                            li 
                                a(href="#") Install Plugin...
    div(class="container-fluid")
        div(class="row-fluid")
            div(class="span3") 
                div(id="gitStatus")
                    ul
                        li(class="staged")
                            h1 On branch master
                            h1 Changes to be committed:
                            h1 (Use "git reset HEAD <file>..." to unstage)
                            ul
                                li modified: public/index.html
                                li deleted: public/sitemap.xml
                                li new file: public/stylesheets/mobile.css
                        li(class="notStaged")
                            h1 Changes not staged for commit:
                            h1 (Use "git add/rm <file>..." to update what will be committed)
                            h1 (Use "git checkout -- <file>..." to discard changes in working directory)
                            ul
                                li deleted: app.rb
                                li deleted: test/add_test_crash_report.sh
                        li(class="untracked")
                            h1 Untracked files
                            h1 (Use "git add <file>..." to include in what will be committed)
                            ul
                                li public/javascripts/
            div(class="span9")!= body
    
    script(src='/js/jquery-1.7.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/bootstrap-dropdown.js')
    script(src='/js/ace/ace.js')
    script(src='/js/app.js')